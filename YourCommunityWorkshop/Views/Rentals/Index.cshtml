@model IEnumerable<YourCommunityWorkshop.ViewModels.CustomerRentalsViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create") <br />*@
    <a href="@Url.Action("Create", "Rentals")" class="btn btn-default"><i class="fa fa-plus"></i> Create New</a>
    <a href="@Url.Action("ReturnToolView", "Rentals")" class="btn btn-default"><i class="fas fa-exchange-alt"></i> Tools Awaiting Return</a>
    @*@Html.ActionLink("Tools Awaiting Return", "ReturnToolView")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RentalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateRented)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateReturn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToolName)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RentalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRented)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateReturn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToolName)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.RentalId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RentalId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.RentalId })*@
                <a href="@Url.Action("Edit", "Rentals", new {id = item.RentalId})" class="btn btn-default"><i class="fa fa-edit"></i> Edit</a>
                <a href="@Url.Action("Details", "Rentals", new {id = item.RentalId})" class="btn btn-default"><i class="fa fa-info"></i> Details</a>
                <a href="@Url.Action("Delete", "Rentals", new {id = item.RentalId})" class="btn btn-default"><i class="fa fa-trash"></i> Delete</a>
            </td>
        </tr>
    }

</table>

@section scripts
{
    <script>
        $(function() {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>
}
