@model IEnumerable<YourCommunityWorkshop.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Create", "Customer")" class="btn btn-default"><i class="fa fa-plus"></i> Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerPhone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerPhone)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Customer", new {id = item.CustomerId})" class="btn btn-default"><i class="fa fa-edit"></i> Edit</a>
                <a href="@Url.Action("Details", "Customer", new {id = item.CustomerId})" class="btn btn-default"><i class="fa fa-info"></i> Details</a>
                <a href="@Url.Action("Delete", "Customer", new {id = item.CustomerId})" class="btn btn-default"><i class="fa fa-trash"></i> Delete</a>
                <a href="@Url.Action("CustomerHistory", "Customer", new { id = item.CustomerId })" class="btn btn-default"><i class="fa fa-history"></i> History</a>
            </td>
        </tr>
    }

</table>

@section scripts
{
    <script>
        $(function() {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
    </script>
}
